<% include ../partials/header %>



<div class="container">
    
        <% if(currentUser && currentUser.isAdmin){ %>
            <h1> You are an admin </h1>
        <% } %>
    
    <div class="row">
        
        
         
        
        <div class="col-md-9">
      <% posts.forEach(function(post){ %>
            
                    <a href="/posts/<%=post._id%>" style="color:black">
                    <h4>
                         <strong> <%="  "+post.question %></strong>
                    </h4>
                    </a>
                    
                
                <div >
                    <span class="glyphicon glyphicon-hand-right"></span>
                    <a class="btn btn-xs btn-primary disabled">
                        Note
                     </a>
                        <span>
                            <%=post.notes_count%>
                        </span>
                        <h5><a href="/users/<%=post.author.id%>"  style="color:black">
                        <%= post.author.username %>
                        </a></h5>
                    <h6> <em><%=post.posted_at.toUTCString()%></em> </h6>
                      
                   
                </div>
                 
                
                <hr>
           
            
        <% }); %>
      
       </div>
        <div class="col-md-3 text-center">
            <%include ../partials/postmodal%>
        </div>
    </div>
</div>


<%include ../partials/footer %>
