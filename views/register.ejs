<% include partials/header %>

<div class="container">

<h1 style="text-align:center">Sign up to your Discussion Forum</h1>

<form action="/register" method="POST">
    <div class="form-group">
    <input class="form-control" type="email" placeholder="email" name="username" required="required">
    </div>
    
    <div class="form-group">
    <input class="form-control" type="text" placeholder="first name" name="firstname" required="required">
    </div>
    
    <div class="form-group">
    <input class="form-control" type="text" placeholder="last name" name="lastname" required="required">
    </div>
    
    <div class="form-group">
    <input class="form-control" type="text" placeholder="Alias" name="alias" required="required">
    </div>
    
     <div class="form-group">
    <input class="form-control" type="text" placeholder="Admin Code" name="adminCode">
    </div>
    
     <div class="form-group">
    <button type="submit" class="btn btn-lg btn-default"> Sign Up </button>
    </div>
</form>

</div>

<% include partials/footer %>